{
  "info": {
    "name": "SnackMaster Auth",
    "_postman_id": "snackmaster-auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register initial admin",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Admin\",\"email\":\"admin@example.com\",\"password\":\"AdminPass123\",\"role\":\"admin\"}"
        },
        "url": { "raw": "http://localhost:5000/api/auth/register", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"admin@example.com\",\"password\":\"AdminPass123\"}"
        },
        "url": { "raw": "http://localhost:5000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Create refill (example protected)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"machine\":\"<machineId>\",\"refilledBy\":\"tech1\",\"items\":[{\"product\":\"<productId>\",\"quantityAdded\":5}]}"
        },
        "url": { "raw": "http://localhost:5000/api/refills", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api","refills"] }
      }
    }
  ]
}